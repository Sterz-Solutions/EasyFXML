<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="5.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="moe.tristan.easyfxml.samples.form.user.view.userform.fields.firstname.FirstnameController">
    <children>
        <HBox alignment="CENTER_LEFT">
            <children>
                <Label text="First name">
                    <font>
                        <Font name="System Italic" size="10.0" />
                    </font>
                </Label>
            </children>
        </HBox>
        <HBox>
            <children>
                <TextField fx:id="firstNameField" promptText="John" />
            </children>
        </HBox>
      <HBox>
         <children>
            <Label fx:id="invalidLabel" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="First name" textFill="RED" visible="false">
               <font>
                  <Font size="10.0" />
               </font>
            </Label>
         </children>
      </HBox>
    </children>
</VBox>
